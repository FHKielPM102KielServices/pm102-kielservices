            <label><b>Enter New Password</b></label>
            <input type="password" placeholder="Enter Password" name="pswd1" id="password1" required>

            <label><b>Re-Enter New Password</b></label>
            <input type="password" placeholder="Enter Password" name="pswd2" id="password2" required>


            <button type="submit" class="btn btn-dark btn-lg">SignUp</button>
